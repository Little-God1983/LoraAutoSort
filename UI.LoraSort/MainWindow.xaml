<Window x:Class="UI.LoraSort.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI.LoraSort.ViewModels"
        xmlns:conv="clr-namespace:UI.LoraSort"
        xmlns:controls="clr-namespace:UI.LoraSort"
        mc:Ignorable="d"
        Title="Lora Auto Sort - By AIKnowledge2Go" Height="800" Width="1000"
        MinHeight="900" MinWidth="1200"
        Icon="Resources/AIKnowledgeIcon.ico">

    <!--<Window.Resources>
        --><!-- Converters --><!--
        <conv:TagsDisplayConverter x:Key="TagsDisplayConverter" />
        <conv:IndexToPriorityConverter x:Key="IndexToPriorityConverter" />
    </Window.Resources>-->

    <Window.DataContext>
        <local:MainViewModel />
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <!-- Row 0: Main content -->
            <RowDefinition Height="3*" />
            <!-- Row 1: GridSplitter -->
            <RowDefinition Height="Auto" />
            <!-- Row 2: Logs -->
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <!-- Left side -->
            <ColumnDefinition Width="2*" />
            <!-- Right side -->
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Left side: AppSettingsTopLeftControl remains unchanged -->
        <controls:AppSettingsTopLeftControl Grid.Row="0" Grid.Column="0" Margin="10" />

        <!-- Right side: Now using the extracted CustomMappingsTopRightControl -->
        <controls:CustomMappingsTopRightControl Grid.Row="0" Grid.Column="1" Margin="10" />

        <!-- GridSplitter -->
        <GridSplitter Grid.Row="1" Grid.ColumnSpan="2" Height="5" HorizontalAlignment="Stretch" 
                      VerticalAlignment="Center" Background="Gray" IsEnabled="False"/>

        <!-- Logs Section -->
        <Grid Grid.Row="2" Grid.ColumnSpan="2" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal" Grid.Row="0">
                <CheckBox Content="Show errors only" IsChecked="{Binding ShowErrorsOnly}" Margin="0,0,10,0"/>
                <Button Content="Copy Errors to clipboard" Command="{Binding CopyErrorLogsCommand}" Margin="0,0,10,0"/>
                <Button Content="Export Errors to file" Command="{Binding ExportErrorLogsCommand}"/>
            </StackPanel>
            <ListView x:Name="logListView" ItemsSource="{Binding LogEntriesView}" Grid.Row="1" 
                      ScrollViewer.VerticalScrollBarVisibility="Auto">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding StatusMessage}">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="Black"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsSuccessful}" Value="False">
                                            <Setter Property="Foreground" Value="Red"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>

        <!-- Build Number Display -->
        <TextBlock Text="{Binding BuildNumber}"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Top"
                   Margin="10"
                   FontSize="12" />
    </Grid>
</Window>
